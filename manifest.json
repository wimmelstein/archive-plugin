{
  "manifest_version": 3,
  "name": "Archive.vn Redirector",
  "version": "1.0",
  "description": "Automatically redirects to archive.vn version of the current page",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://archive.vn/*",
    "https://archive.is/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 